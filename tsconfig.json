{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitThis": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "preserveValueImports": true,
    "strictBindCallApply": true,
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "frontend/**/*.d.ts",
    "frontend/**/*.ts",
    "frontend/**/*.stories.ts",
    "frontend/**/*.vue",
    ".eslintrc.js"
  ],
  "references": [
    {
      "path": "./tsconfig.vite.json"
    }
  ],
}
